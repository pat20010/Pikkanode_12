<form class="form-signin  block-form" method="POST">
    <div class="text-center mb-4">
        <img class="mb-4" src="images/letter-p.svg" alt="" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal">PikkaNode</h1>
        <p>Login to pikkanode</p>
    </div>

    <div class="form-label-group mb-2">
        <label for="inputEmail">Email address</label>
        <input id="inputEmail" name="email" class="form-control" placeholder="Email address" required="" autofocus="">
    </div>

    <div class="form-label-group">
        <label for="inputPassword">Password</label>
        <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required="">
    </div>

    <div class="checkbox mb-3">
    </div>
    <button class="btn btn-dark btn-block">Sign in</button>
</form>